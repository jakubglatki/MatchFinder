<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
		android:text="SEARCH PLACE"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/displayButton"
		android:layout_marginTop="50.0dp"
		android:layout_marginBottom="0.0dp"
		android:layout_marginLeft="0.0dp" />

	<TextView
		android:text="Place Address"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
        android:textSize = "20sp"
        android:gravity = "center"
        android:layout_marginTop="100.0dp"
		android:id="@+id/addressText" />

    <TextView
		android:text="Place Name"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
        android:textSize = "20sp"
        android:gravity = "center"
        android:layout_marginTop="150.0dp"
		android:id="@+id/nameText" />

    <TextView
		android:text="Place Coordinate"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
        android:textSize = "20sp"
        android:gravity = "center"
        android:layout_marginTop="200.0dp"
		android:id="@+id/coordinateText" />

</RelativeLayout>